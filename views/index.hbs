<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>SnagzPizza</title>
  <style>
    h1 {
      color: red;
    }
    body {
      background-color: gray;
      display: flex;
      justify-content: space-around;
      align-items: center;
      height: 100vh;
    }
    form {
      font-size: 150%;
    }
    #pizza-image {
      width: 300px;
      height: 300px;
      background-size: cover;
      background-position: center;
    }
  </style>
</head>
<body>
  <h1>Witaj w SnagzPizza! Zrób swoją pizzę!</h1>
  <form id="pizza-form" method="POST" action="/SnagzPizza">
    <!--dodać onclick do inputów do pokazywania na pizzy -->
    <input type="checkbox" name="s" value="ser" onclick="updatePizzaImage()">Ser żółty<br>
    <input type="checkbox" name="s" value="mozzarella" onclick="updatePizzaImage()">Mozzarella<br>
    <input type="checkbox" name="s" value="sosik" onclick="updatePizzaImage()">Sos pomidorowy<br>
    <input type="checkbox" name="s" value="pomidor" onclick="updatePizzaImage()">Pomidor<br>
    <input type="checkbox" name="s" value="cebula" onclick="updatePizzaImage()">Cebula<br>
    <input type="checkbox" name="s" value="ogórek" onclick="updatePizzaImage()">Ogórek<br>
    <input type="checkbox" name="s" value="jalapeno" onclick="updatePizzaImage()">Jalapeno<br>
    <input type="checkbox" name="s" value="papryka" onclick="updatePizzaImage()">Papryka<br>
    <input type="checkbox" name="s" value="bekon" onclick="updatePizzaImage()">Bekon<br>
    <input type="checkbox" name="s" value="salami" onclick="updatePizzaImage()">Salami<br>
    <input type="checkbox" name="s" value="szynka" onclick="updatePizzaImage()">Szynka<br>
    <input type="checkbox" name="s" value="kurczak" onclick="updatePizzaImage()">Kurczak<br>
    <input type="checkbox" name="s" value="ananas" onclick="updatePizzaImage()">Ananas<br>
    <input type="checkbox" name="s" value="krewetki" onclick="updatePizzaImage()">Krewetki<br>
    <input type="checkbox" name="s" value="kebab" onclick="updatePizzaImage()">Kebab<br>
    <input type="checkbox" name="s" value="tabasco" onclick="updatePizzaImage()">Tabasco<br>
    <input type="checkbox" name="s" value="sosiko" onclick="updatePizzaImage()">Sos ostry<br>
    <input type="checkbox" name="s" value="sosikc" onclick="updatePizzaImage()">Sos czosnkowy<br>
    <br>
    <input type="text" name="deliveryAddress" placeholder="Adres dostawy"><br><br>
    <button type="submit">Zamów</button>
  </form>
  <div id="pizza-image"></div>

  <script>
    function updatePizzaImage() {
      const checkboxes = document.querySelectorAll('input[name="s"]:checked');
      const pizzaImage = document.getElementById('pizza-image');
      let ingredients = [];
      checkboxes.forEach((checkbox) => {
        ingredients.push(checkbox.value);
      });

      // Logic to change the pizza image based on selected ingredients
      pizzaImage.style.backgroundImage = ingredients.map(ingredient => `url('/images/${ingredient}.svg')`).join(', ');
    }
  </script>
</body>
</html>
