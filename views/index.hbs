<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>SnagzPizza</title>
  <style>
    h1 {
      color: red;
    }
    body {
      background-color: gray;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100vh;
      margin: 0;
      padding: 0;
    }
    form {
      width: 80%;
      font-size: 150%;
      margin-bottom: 20px;
    }
    #pizza-image {
      width: 70%;
      height: 70%;
      background-size: contain;
      background-position: center;
      background-repeat: no-repeat;
      float: right;
      position: relative;
    }
    #baner {
      width: 100%;
      float: left;
      text-align: center;
    }
    #checkbox {
      width: 20%;
      height: 70%;
      position: fixed;
      left: 0;
      top: 10px;
      margin: 100px;
    }
    .ingredient {
      position: absolute;
      width: 100%;
      height: 100%;
      background-size: contain;
      background-position: center;
      background-repeat: no-repeat;
      display: none; /* Start with all ingredients hidden */
    }
    #Pizza_ciasto {
      z-index: 0;
      display: block; /* Ensure dough is always visible */
    }
    #Pizza_ser {
      z-index: 1; /* Ensure cheese and tomato sauce are beneath other ingredients */
    }
    .topping {
      z-index: 2; /* Regular toppings */
    }
    #Pizza_sos_ostry,
    #Pizza_sos_czosnkowy {
      z-index: 3; /* Spicy and garlic sauces on top */
    }
  </style>
</head>
<body>
  <div id="baner">
    <h1>Witaj w SnagzPizza! Zrób swoją pizzę!</h1>
  </div>
  <div id="checkbox">
    <form id="pizza-form" method="POST" action="/SnagzPizza">
      <input type="checkbox" name="s" value="Pizza_ser" onclick="updatePizzaImage()">Ser żółty<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_pieczarka" onclick="updatePizzaImage()">Pieczarki<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_pomidor" onclick="updatePizzaImage()">Pomidor<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_cebula" onclick="updatePizzaImage()">Cebula<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_ogórek" onclick="updatePizzaImage()">Ogórek<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_jalapeno" onclick="updatePizzaImage()">Jalapeno<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_papryka" onclick="updatePizzaImage()">Papryka<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_boczek" onclick="updatePizzaImage()">Bekon<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_oliwka" onclick="updatePizzaImage()">Oliwka<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_salami" onclick="updatePizzaImage()">Salami<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_szynka" onclick="updatePizzaImage()">Szynka<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_kurczak" onclick="updatePizzaImage()">Kurczak<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_ananas" onclick="updatePizzaImage()">Ananas<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_krewetka" onclick="updatePizzaImage()">Krewetki<br>
      <input type="checkbox" name="s" value="Pizza_skladnik_kebab" onclick="updatePizzaImage()">Kebab<br>
      <input type="checkbox" name="s" value="Pizza_sos_ostry" onclick="updatePizzaImage()">Sos ostry<br>
      <input type="checkbox" name="s" value="Pizza_sos_czosnkowy" onclick="updatePizzaImage()">Sos czosnkowy<br>
      <br>
      <input type="text" name="deliveryAddress" placeholder="Adres dostawy"><br><br>
      <button type="submit">Zamów</button>
    </form>
  </div>
  <div id="pizza-image">
    <div class="ingredient" id="Pizza_ciasto" style="background-image: url('/Pizza_ciasto.svg');"></div>
    <div class="ingredient" id="Pizza_ser" style="background-image: url('/Pizza_ser.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_pieczarka" style="background-image: url('/Pizza_skladnik_pieczarka.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_pomidor" style="background-image: url('/Pizza_skladnik_pomidor.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_cebula" style="background-image: url('/Pizza_skladnik_cebula.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_ogórek" style="background-image: url('/Pizza_skladnik_ogórek.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_jalapeno" style="background-image: url('/Pizza_skladnik_jalapeno.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_papryka" style="background-image: url('/Pizza_skladnik_papryka.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_boczek" style="background-image: url('/Pizza_skladnik_boczek.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_oliwka" style="background-image: url('/Pizza_skladnik_oliwka.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_salami" style="background-image: url('/Pizza_skladnik_salami.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_szynka" style="background-image: url('/Pizza_skladnik_szynka.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_kurczak" style="background-image: url('/Pizza_skladnik_kurczak.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_ananas" style="background-image: url('/Pizza_skladnik_ananas.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_krewetka" style="background-image: url('/Pizza_skladnik_krewetka.svg');"></div>
    <div class="ingredient topping" id="Pizza_skladnik_kebab" style="background-image: url('/Pizza_skladnik_kebab.svg');"></div>
    <div class="ingredient" id="Pizza_sos_ostry" style="background-image: url('/Pizza_sos_ostry.svg');"></div>
    <div class="ingredient" id="Pizza_sos_czosnkowy" style="background-image: url('/Pizza_sos_czosnkowy.svg');"></div>
  </div>

  <script>
    function updatePizzaImage() {
      const checkboxes = document.querySelectorAll('input[name="s"]:checked');
      
      // Reset all ingredients visibility
      document.querySelectorAll('.ingredient').forEach(ingredient => {
        if (ingredient.id !== 'Pizza_ciasto') {
          ingredient.style.display = 'none';
        }
      });

      // Show selected ingredients
      checkboxes.forEach((checkbox) => {
        const ingredient = checkbox.value;
        document.getElementById(ingredient).style.display = 'block';
      });
    }
  </script>
</body>
</html>
